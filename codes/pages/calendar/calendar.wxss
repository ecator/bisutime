.container{
	width: 720rpx;
	margin: 10rpx auto;
}
.calendar{
	width: 704rpx;
	margin:5rpx auto;
}
.calendar-title{
	font-weight: bold;
	text-align: center;
}
.calendar-row{
	display: flex;
	flex-direction: row;
	flex-wrap: nowrap;
	justify-content: center;
}
.calendar-th{
	font-weight: bold;
}
.calendar-td{
	font-weight: normal;
}
.calendar-th,.calendar-td{
	padding: 15rpx 15rpx;
	margin: 0 0;
	width: 12.5%;
	text-align: center;
	font-size: 30rpx;
	/*border: 1rpx red solid;*/
}
.holiday,.study,.test{
	position: relative;
}
.holiday{
	color: #00CD00;
}
.study{
	color: #EE0000;
}
.test{
	color:#CD00CD;
}
.small{
	padding: 18rpx;
	font-size: 22rpx
}
.holiday:after{
	content: "假";
	font-size: 18rpx;
	display: block;
	position: absolute;
	top:0;
}
.study:after{
	content: "学";
	font-size: 18rpx;
	display: block;
	position: absolute;
	top: 0;
}
.test:after{
	content: "试";
	font-size: 18rpx;
	display: block;
	position: absolute;
	top: 0;
}
.today{
	font-weight: bold;
	text-shadow: 2rpx 2rpx 3rpx gray;
}